@model Bloggie.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 px-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie
            </h1>
            <p class="lead">
                Want to read the weekly Dev articles???
                Join the Bloggie and get weekly articles on your email.
                Articles on: HTML,CSS,Java Script,ASP.NET, C#, AZURE
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/262508/pexels-photo-262508.jpeg?auto=compress&cs=tinysrgb&w=600" 
                alt="Bloggie - Dev Blogs"
                class="d-block mx-lg-auto img-fluid" width="300px"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model!=null && Model.tags.Any())
            {
                foreach(var tag in Model.tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.blogPosts.Any())
            {
                foreach(var blogPost in Model.blogPosts)
                {
                    <div class="mb-5 bg-light box-shadow py-5 px-5">
                        <img src="@blogPost.FeatureImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid"/>

                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">Author:@blogPost.Author <br /> Date Published:@blogPost.PublishedDate.ToShortDateString()</p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>
                        <a class="btn btn-dark" 
                                 asp-area=""
                                 asp-controller="Blogs"
                                 asp-action="Index"
                                 asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                    </div>
                }
            }
        </div>
    </div>
</div>

